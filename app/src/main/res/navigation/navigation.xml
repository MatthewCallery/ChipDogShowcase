<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/dogBreedsFragment">

    <fragment
        android:id="@+id/dogBreedsFragment"
        android:name="com.example.chipdogshowcase.DogBreedsFragment"
        tools:layout="@layout/fragment_dog_breeds">
        <action
            android:id="@+id/action_dogBreedsFragment_to_dogBreedImagesFragment"
            app:destination="@id/dogBreedImagesFragment" />
    </fragment>
    <fragment
        android:id="@+id/dogBreedImagesFragment"
        android:name="com.example.chipdogshowcase.DogBreedImagesFragment"
        android:label="DogBreedImagesFragment">
        <argument
            android:name="selectedProperty"
            app:argType="com.example.chipdogshowcase.DogBreed"
            />
    </fragment>
</navigation>